<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssrolc.repository.MailRepository">
	
	<insert id="insertMailAuth" parameterType="hashmap" useGeneratedKeys="true" keyProperty="aidx">
		INSERT INTO ssrolc.disclosureEmailAuth(authKey,email,memName,regDate,regIp) 
		VALUES(#{authKey},#{mailAddress},#{pMemName},SYSDATE(),#{jslIp});
	</insert>
	
	<select id="findAuthKey" parameterType="hashmap" resultType="String">
		select authKey from ssrolc.disclosureEmailAuth where memName=#{memName} and email=#{email}
	</select>
	
</mapper>